@model List< System.ServiceModel.Syndication.SyndicationItem>
@{
    var index = 1;
}
<table class="table table-bordered table-striped" >
    <thead>
        <tr>
            <th width="5%">STT</th>
            <th width="15%">Newspaper</th>
            <th width="80%">Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(index++)</td>
                <td>Thanh niên</td>
                <td>
                    <a href="@item.Links.FirstOrDefault().Uri" target="_blank">@item.Title.Text</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true" style="width:80% !important;height:80% !important">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <iframe id="news-content"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <script>
        function readNews(url) {
            $('#news-content').attr('src', url);
            $('#exampleModalLong').modal('toggle');
        }
    </script>
}
