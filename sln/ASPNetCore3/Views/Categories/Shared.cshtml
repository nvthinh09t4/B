@model Domain.Category
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Note" class="control-label"></label>
    <input asp-for="Note" class="form-control" />
    <span asp-validation-for="Note" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Display" class="control-label"></label>
    <input asp-for="Display" class="form-control" />
    <span asp-validation-for="Display" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CategoryTypeId" class="control-label"></label>
    <select asp-for="CategoryTypeId" class="form-control" asp-items="ViewBag.CategoryTypeId"></select>
</div>