@model UploadFileViewModel
@{
}

<div class="col-md-8 offset-2">
    <form class="input-group" asp-controller="File" asp-action="UploadFile" method="post" enctype="multipart/form-data">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
        </div>
        <div class="custom-file">
            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
            <input type="file" class="custom-file-input" id="file-upload" asp-for="FileUpload" accept=".pdf"
                   aria-describedby="inputGroupFileAddon01">

        </div>
        <input type="submit" class="btn btn-warning" style="margin-left:20px;"/>
    </form>
</div>
<div class="card col-md-10 offset-1" style="margin-top:20px;">
    <div class="card-body">

    </div>
</div>
@section Scripts {
<script>
    $('#file-upload').change(function () {
        var i = $(this).prev('label').clone();
        var file = $('#file-upload')[0].files[0].name;
        $(this).prev('label').text(file);
    });

    $(document).ready(function () {

    });
</script>

}

