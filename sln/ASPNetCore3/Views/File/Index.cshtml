@model UploadFileViewModel
@{
}

<style>
    .custom-file-label {
        text-overflow: ellipsis;
        width: 300px;
        white-space: nowrap;
        overflow: hidden !important;
        text-overflow: ellipsis;
    }
</style>

<div class="col-md-8 offset-2">
    <form class="input-group" asp-controller="File" asp-action="UploadFile" method="post" enctype="multipart/form-data">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
        </div>
        <div class="custom-file">
            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
            <input type="file" class="custom-file-input" id="file-upload" asp-for="FileUpload" accept=".pdf"
                   aria-describedby="inputGroupFileAddon01">

        </div>
        <input type="submit" class="btn btn-warning" style="margin-left:20px;" />
    </form>
</div>
<div class="card col-md-12" style="margin-top:20px;">
    <div class="card-body">
        <table class="table table-responsive table-bordered table-striped">
            <thead>
                <tr>
                    <th style="width:5%;" class="text-center">STT</th>
                    <th style="width:50%" class="text-center">File</th>
                    <th style="width:30%" class="text-center">Upload At</th>
                    <th style="width:15%" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (FileStorage file in Model.Files)
	            {
		        <tr>
                    <td class="text-center">@(Model.Files.IndexOf(file) + 1)</td>
                    <td><a asp-action="View" asp-route-name="@file.StorageFileName" asp-controller="File" target="_blank">@file.OriginFileName</a> </td>
                    <td>@file.CreatedOn.ToString("HH:mm:ss dd/MM/yyyy")</td>
                    <td>
                        <a class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="top" title="Sửa" >
                            <i class="fa fa-edit"></i>
                        </a>
                        <a class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Xóa">
                            <i class="fa fa-trash "></i>
                        </a>
                    </td>
                </tr>
	            }
            </tbody>
        </table>
    </div>
</div>
