@page
@model AspCoreMvc5.Controllers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Speaker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Speaker.Id" />
            <div class="form-group">
                <label asp-for="Speaker.Name" class="control-label"></label>
                <input asp-for="Speaker.Name" class="form-control" />
                <span asp-validation-for="Speaker.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Speaker.Level" class="control-label"></label>
                <input asp-for="Speaker.Level" class="form-control" />
                <span asp-validation-for="Speaker.Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Speaker.Description" class="control-label"></label>
                <input asp-for="Speaker.Description" class="form-control" />
                <span asp-validation-for="Speaker.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Speaker.ShortQuote" class="control-label"></label>
                <input asp-for="Speaker.ShortQuote" class="form-control" />
                <span asp-validation-for="Speaker.ShortQuote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
